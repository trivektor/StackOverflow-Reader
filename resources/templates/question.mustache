<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' type='text/css' href='bootstrap.css'>
    <link rel='stylesheet' type='text/css' href='customizations.css'>
    <link rel='stylesheet' type='text/css' href='http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css'>
    <script src='http://code.jquery.com/jquery-1.10.2.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.0/moment.min.js'></script>
    <script>
      $(function() {
        $('.time').each(function() {
            var $this = $(this);
            var timestamp = (new Date($this.attr('data-timestamp')*1000));
            $this.html(moment(timestamp).format('LLLL'));
        });
      });
    </script>
  </head>
  <body>
    <main>
      <section>
        <div class='media'>
          <div class='pull-left'>
            <figure class='label label-warning label-square'>{{question.score}}</figure>
          </div>
          <div class='media-body'>
            <h1 class='item-title'>{{question.title}}</h1>
          </div>
        </div>
        <div class='user-module'>
          <img class='user-avatar' src='{{question.owner.profile_image}}' alt='{{question.owner.display_name}}' />
          <b>{{question.owner.display_name}}</b>
          <figure class='reputation'>({{question.owner.formatted_reputation}})</figure>
          <time class='block-element text-muted'>
            <small><span class='time' data-timestamp='{{question.creation_date}}'></span></small>
          </time>
        </div>
        <div class='region-responsive'>{{question.body}}</div>
      </section>
      <section>
        <h2 class='alert alert-warning lead'>Answers: {{question.answer_count}}</h2>
        {{#question.tags}}
          <span class='label label-default label-square label-success'>{{.}}</span>
        {{/question.tags}}
      </section>
      <section>
        <ul class='list-group vertically-separated'>
          {{#answers}}
            <li class='list-group-item'>
              <div class='media'>
                <div class='pull-left'>
                  <figure class='label label-warning label-square'>{{score}}</figure>
                  {{#is_accepted}}
                    <span class='score text-success'>
                      <i class='fa fa-check'></i>
                    </span>
                  {{/is_accepted}}
                </div>
                <div class='media-body'>
                  <div class='region-responsive'>{{body}}</div>
                  <div class='user-module'>
                    <img class='user-avatar' src='{{owner.profile_image}}' alt='{{owner.display_name}}' />
                    <b>{{owner.display_name}}</b>
                    <figure class='reputation'>({{owner.formatted_reputation}})</figure>
                    <time class='block-element text-muted'>
                      <small><span class='time' data-timestamp='{{creation_date}}'></span></small>
                    </time>
                  </div>
                </div>
              </div>
            </li>
          {{/answers}}
        </ul>
      </section>
    </main>
  </body>
</html>