<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' type='text/css' href='bootstrap.css'>
    <link rel='stylesheet' type='text/css' href='bootflat.css'>
    <link rel='stylesheet' type='text/css' href='bootflat-square.css'>
    <link rel='stylesheet' type='text/css' href='bootflat.extensions.css'>
    <link rel='stylesheet' type='text/css' href='customizations.css'>
    <script src='http://code.jquery.com/jquery-1.10.2.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.0/moment.min.js'></script>
    <script>
      $(function() {
        $('.time').each(function() {
            var $this = $(this);
            var timestamp = (new Date($this.attr('data-timestamp')*1000));
            $this.html(moment(timestamp).format('LLLL'));
        });
      });
    </script>
  </head>
  <body>
    <main>
      <section>
        <h1 id='question-title'>{{question.title}}</h1>
        <div class='media'>
          <div class='pull-left'>
            <figure class='label label-warning label-square'>{{question.score}}</figure>
          </div>
          <div class='media-body'>
            <div class='body'>
              <div class='region-responsive'>{{question.body}}</div>
            </div>
            <time class='block-element text-muted'>
              <small>asked <span class='time' data-timestamp='{{question.creation_date}}'></span></small>
            </time>
            <div class='media block-element label label-minimal label-square answerer'>
              <div class='pull-left'>
                <img class='user-avatar' src='{{question.owner.profile_image}}' alt='{{question.owner.display_name}}' />
              </div>
              <div class='media-body'>
                <b>{{question.owner.display_name}}</b>
                <figure>{{question.owner.formatted_reputation}}</figure>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section>
        <h2 class='lead'>Answers: {{question.answer_count}}</h2>
        {{#question.tags}}
          <span class='label label-default label-square label-success'>{{.}}</span>
        {{/question.tags}}
      </section>
      <section>
        <ul class='list-group vertically-separated'>
          {{#answers}}
            <li class='list-group-item'>
              <div class='media'>
                <div class='pull-left'>
                  <figure class='label label-warning label-square label-success'>{{score}}</figure>
                </div>
                <div class='media-body'>
                  <div class='region-responsive'>{{body}}</div>
                  <time class='block-element'>
                    <small>answered <span class='time' data-timestamp='{{creation_date}}'></span></small>
                  </time>
                  <div class='media block-element label label-minimal label-square answerer'>
                    <div class='pull-left'>
                      <img class='user-avatar' src='{{owner.profile_image}}' alt='{{owner.display_name}}' />
                    </div>
                    <div class='media-body'>
                      <b>{{owner.display_name}}</b>
                      <figure>{{owner.formatted_reputation}}</figure>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          {{/answers}}
        </ul>
      </section>
    </main>
  </body>
</html>